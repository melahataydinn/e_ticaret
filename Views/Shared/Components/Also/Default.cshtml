<!-- Owl Carousel CSS Dosyası -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

<!-- Sayfa İçeriği -->
@model List<maku_eticaret.Models.Products>

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Bunları da Beğenebilirsiniz!</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var item in Model)
                {
                    <div class="card product-item border-0">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="/Urunler/@item.ProductPicture" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@item.ProductName</h6>
                            <div class="d-flex justify-content-center">
                                <h6 class="text-muted ml-2">@item.ProductPrice TL</h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/Home/Detay/@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Detay</a>
                            <a href="/Cart/Add/@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete ekle</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Owl Carousel JavaScript Dosyaları -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<!-- Carousel'ı başlatma işlemi -->
<script>
    $(document).ready(function () {
        $(".related-carousel").owlCarousel({
            loop: false, // Tek satırda göstermek için loop'u false yapın
            margin: 10,
            nav: true,
            dots: false,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: Model.length, // Modeldeki öğe sayısı kadar sütun oluşturun
                },
                1000: {
                    items: Model.length,
                }
            }
        });
    });
</script>
